
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

enum Role {
  normal
  admin
  store
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  address   String
  password String
  role     Role     @default(normal)
  stores   Store[]   
  ratings  Rating[]  
  createdAt DateTime @default(now())
}

model Store {
  id        String   @id @default(uuid())
  name      String
  password String
  address   String
  email    String   @unique
  owner     User?   @relation(fields: [ownerId], references: [id])
  ownerId   String?
  ratings   Rating[]  
  createdAt DateTime @default(now())
}

model Rating {
  id       String  @id @default(uuid())
  store    Store   @relation(fields: [storeId], references: [id])
  storeId  String
  user     User    @relation(fields: [userId], references: [id])
  userId   String
  rating   Int
  createdAt DateTime @default(now())
}
